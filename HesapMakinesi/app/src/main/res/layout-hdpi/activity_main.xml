<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/sayiGoster"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:background="@color/editTextBackground"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="60dp"
        android:paddingRight="23dp"
        android:paddingBottom="20dp"
        android:text="0"
        android:textColor="@color/buttonBackground"
        android:textSize="34sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="453dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnAc"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:onClick="btnAC"
                android:text="AC"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btnArtiEksi"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:onClick="btnSayiTik"
                android:text="+/-"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btnYuzde"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:onClick="btnYuzde"
                android:text="%"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btnBol"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:onClick="btnOpTik"
                android:text="/"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:onClick="btnSayiTik"
                android:text="7"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:onClick="btnSayiTik"
                android:text="8"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:onClick="btnSayiTik"
                android:text="9"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btnCarp"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:onClick="btnOpTik"
                android:text="x"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:onClick="btnSayiTik"
                android:text="4"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:onClick="btnSayiTik"
                android:text="5"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:onClick="btnSayiTik"
                android:text="6"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btnCikar"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:onClick="btnOpTik"
                android:text="-"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:onClick="btnSayiTik"
                android:text="1"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:onClick="btnSayiTik"
                android:text="2"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:onClick="btnSayiTik"
                android:text="3"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btnTopla"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:onClick="btnOpTik"
                android:text="+"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/btnbos"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:text=","
                android:textSize="24dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:onClick="btnSayiTik"
                android:text="0"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btnNokta"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_kenarlik"
                android:text="."
                android:textSize="24dp" />

            <Button
                android:id="@+id/btnEsittir"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="btnSonuc"
                android:text="="
                android:textColor="@color/buttonBackground"
                android:textSize="24dp" />
        </TableRow>

    </TableLayout>
</LinearLayout>